@model IEnumerable<CoffeeShop.Web.Models.Coffee>

@{
    ViewData["Title"] = "Управление напитками";
}

<h1>Управление напитками</h1>

<p>
    <a asp-action="CreateCoffee" class="btn btn-primary">Добавить новый напиток</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category) @* Отображаем название категории *@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @item.Price.ToString("C") @* Форматируем цену *@
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Изображение" style="max-width: 50px; height: auto;" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category!.Name) @* Отображаем имя категории *@
                </td>
                <td>
                    <a asp-action="EditCoffee" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a> |
                    <a asp-action="DeleteCoffee" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Вернуться в админ-панель</a>
</div>